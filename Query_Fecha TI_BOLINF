-- Busca solo en BOLINF

SELECT 
    OWNER,
    TABLE_NAME,
    COLUMN_NAME,
    DATA_TYPE
FROM 
    ALL_TAB_COLUMNS
WHERE 
    OWNER = 'BOLINF'
    AND TABLE_NAME IN (
        'XXFNA_PICKING_LINES',
        'XXFNA_PICKING_HEADER',
        'XXFNA_PICKING_ASSIGN',
        'XXFNA_REG_BULTOS'
    )
    AND DATA_TYPE IN ('DATE', 'TIMESTAMP')
ORDER BY 
    TABLE_NAME, COLUMN_NAME;
